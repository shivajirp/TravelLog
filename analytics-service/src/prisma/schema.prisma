generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model place_stats {
  place_id Int @id
  total_reviews BigInt @default(0)
  total_rating BigInt @default(0)
  avg_rating Float @default(0)
}

model review_events {
  id Int @id @default(autoincrement())
  review_id Int @unique
  user_id Int
  place_id Int
  rating Int
  comment String?
  created_at DateTime
}